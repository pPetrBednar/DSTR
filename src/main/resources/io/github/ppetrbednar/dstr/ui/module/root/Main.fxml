                  <Cursor fx:constant="HAND" />
               </cursor>
            </JFXButton>
            <JFXButton focusTraversable="false" onAction="#modeAddRail" prefWidth="70.0" style="-fx-text-fill: -fx-primary-text-color;" styleClass="hover-effect-information" text="Rail">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </JFXButton>
            <JFXButton focusTraversable="false" onAction="#modeAddIllegalTransition" prefWidth="130.0" style="-fx-text-fill: -fx-primary-text-color;" styleClass="hover-effect-information" text="Illegal Transition">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </JFXButton>
            <Separator maxHeight="-Infinity" opacity="0.27" orientation="VERTICAL" prefHeight="20.0">
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </Separator>
            <JFXButton focusTraversable="false" onAction="#modeRemoveSwitch" prefWidth="70.0" style="-fx-text-fill: -fx-primary-text-color;" styleClass="hover-effect-danger" text="Switch">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </JFXButton>
            <JFXButton focusTraversable="false" onAction="#modeRemoveRail" prefWidth="70.0" style="-fx-text-fill: -fx-primary-text-color;" styleClass="hover-effect-danger" text="Rail">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </JFXButton>
            <JFXButton focusTraversable="false" onAction="#modeRemoveIllegalTransition" prefWidth="130.0" style="-fx-text-fill: -fx-primary-text-color;" styleClass="hover-effect-danger" text="Illegal Transition">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
